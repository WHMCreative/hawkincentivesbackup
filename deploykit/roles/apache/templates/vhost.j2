<VirtualHost *:80>
    ServerName {{ item }}
    ServerAlias www.{{ item }}

    DocumentRoot {{ sites_directory }}/{{ site_name }}/{{ htdocs }}

    <Directory {{ sites_directory }}/{{ site_name }}/{{ htdocs }}>
        Options All
        Allow from all
        AllowOverride All
    </Directory>

{% for env_var in env_vars %}
    SetEnv {{ env_var }}
{% endfor %}

</VirtualHost>
